doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/loginstyles.css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200')
        title Document
    body 
        .login-container
            h1(class='title') #{title}

            if error
            p= error
            form(action='/login' method='POST' class='login-form')
                .form-group
                   
                    i(class='material-symbols-rounded form-label') Person
                    input(type='text' name='username' id='username' placeholder='Usuario' class='form-input', required)

                .form-group
                    i(class='material-symbols-rounded form-label') Password
                    input(type='password' name='password' id='password' placeholder='Contraseña' class='form-input', required)
                    button(type='button' id='mostrarContrasena')
                        i(class='material-symbols-rounded') visibility_off

                .form-group
                    button(type='submit' class='submit-button') Iniciar sesión

            p ¿No tienes una cuenta? 
            a(href='/registro' class='register-link') Regístrate

            //- Script en línea para mostrar/ocultar contraseña
        script.
            const passwordInput = document.getElementById('password');
            const mostrarContrasenaBtn = document.getElementById('mostrarContrasena');

            mostrarContrasenaBtn.addEventListener('click', () => {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    mostrarContrasenaBtn.innerHTML = '<i class="material-symbols-rounded">visibility</i>';
                } else {
                    passwordInput.type = 'password';
                    mostrarContrasenaBtn.innerHTML = '<i class="material-symbols-rounded">visibility_off</i>';
                }
            });
        